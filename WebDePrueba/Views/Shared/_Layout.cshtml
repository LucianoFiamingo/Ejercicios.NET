<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="pt-0">
    <div class="p-3">
        <div class="container">
            <nav class="nav">
                <a class="nav-link" href="/Home/Index">Inicio</a>
                <a class="nav-link" href="/Generalidades/Ejercicios">Generalidades</a>
                <a class="nav-link" href="/Enumeraciones/Ejercicios">Enumeraciones</a>
                <a class="nav-link" href="/Conversiones/Ejercicios">Conversiones</a>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Práctica N°1</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
